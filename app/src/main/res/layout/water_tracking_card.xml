<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/waterCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water (0 l)"
            android:textSize="16sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/waterBottleContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/waterBottle1"
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:padding="2dp"
                    android:src="@drawable/water_bottle"
                    app:tint="@color/teal_700" />

                <ImageButton
                    android:id="@+id/waterBottle2"
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:padding="2dp"
                    android:src="@drawable/water_bottle"
                    app:tint="@color/teal_700" />

                <ImageButton
                    android:id="@+id/waterBottle3"
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:padding="2dp"
                    android:src="@drawable/water_bottle"
                    app:tint="@color/teal_700" />

                <ImageButton
                    android:id="@+id/waterBottle4"
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:padding="2dp"
                    android:src="@drawable/water_bottle"
                    app:tint="@color/teal_700" />

                <ImageButton
                    android:id="@+id/waterBottle5"
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:padding="2dp"
                    android:src="@drawable/water_bottle"
                    app:tint="@color/teal_700" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</androidx.cardview.widget.CardView> 